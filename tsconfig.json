{
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext",
      "dom.iterable"
    ],
    "baseUrl": ".",
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "jsx": "preserve",
    "target": "esnext",
    "module": "esnext",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "apps/*": [
        "./apps/*/src"
      ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "global.d.ts",
    ".next/types/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
